<theme>
	<formatVersion>7</formatVersion>

	<view name="system, basic, detailed, video">
		<helpsystem name="help">
			<textColor>ecff99</textColor>
			<iconColor>ecff99</iconColor>
		</helpsystem>
	</view>
	<view name="system">
		<image name="background" extra="true">
			<path>./art/backgrounds/system_select_green.png</path>
		</image>
	</view>
	<view name="basic, detailed, video">
		<image name="background" extra="true">
			<path>./art/backgrounds/gamelist_green.png</path>
		</image>
	</view>

	<view name="detailed">
		<image name="md_image">
			<maxSize>0.3333333333333333 0.4444444444444444</maxSize>
			<zIndex>100</zIndex>
			<pos>0.7911458333333334 0.4259259259259259</pos>
			<origin>0.5 0.5</origin>
		</image>
	</view>
	<view name="video">
		<video name="md_video">
			<maxSize>0.3333333333333333 0.4444444444444444</maxSize>
			<zIndex>101</zIndex>
			<pos>0.7911458333333334 0.4259259259259259</pos>
			<origin>0.5 0.5</origin>
			<showSnapshotDelay>true</showSnapshotDelay>
			<delay>2.0</delay>
		</video>
	</view>

	<variables>
		<subset.colourset>테마 컬러 설정</subset.colourset>
	</variables>
	<subset name="colourset">
		<include name="80s">./settings/colours/80s.xml</include>
		<include name="Amber">./settings/colours/amber.xml</include>
		<include name="Aqua">./settings/colours/aqua.xml</include>
		<include name="Blue">./settings/colours/blue.xml</include>
		<include name="Blue Aqua">./settings/colours/blue-aqua.xml</include>
		<include name="Blue Steel">./settings/colours/bluesteel.xml</include>
		<include name="Graphite">./settings/colours/graphite.xml</include>
		<include name="Graphite Gold">./settings/colours/graphite-gold.xml</include>
		<include name="Green">./settings/colours/green.xml</include>
		<include name="Green Yellow">./settings/colours/green-yellow.xml</include>
		<include name="Lilac">./settings/colours/lilac.xml</include>
		<include name="Pink">./settings/colours/pink.xml</include>
		<include name="Pink Yellow">./settings/colours/pink-yellow.xml</include>
		<include name="Purple">./settings/colours/purple.xml</include>
		<include name="Red">./settings/colours/red.xml</include>
		<include name="Red Yellow">./settings/colours/red-yellow.xml</include>
		<include name="Samus">./settings/colours/samus.xml</include>
		<include name="Silver">./settings/colours/silver.xml</include>
	</subset>

	<view name="system, basic, detailed, video">
		<helpsystem name="help">
			<origin>0.5 1</origin>
			<pos>0.5 0.985</pos>
			<fontSize>0.034</fontSize>
		</helpsystem>
		<image name="logo">
			<path>./art/logos/${system.theme}.svg</path>
		</image>
		<text name="logoText">
			<fontSize>0.08</fontSize>
			<color>ffcc00</color>
			<forceUppercase>false</forceUppercase>
			<text>${system.fullName}</text>
			<fontPath>./art/Road_Rage.otf</fontPath>
		</text>
	</view>
	<view name="system">
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<color>ffffff</color>
		</image>
		<carousel name="systemcarousel">
			<type>horizontal_wheel</type>
			<logoRotationOrigin>0.5 25</logoRotationOrigin>
			<logoRotation>15</logoRotation>
			<logoAlignment>center</logoAlignment>
			<color>00000000</color>
			<logoScale>1.5</logoScale>
			<logoSize>0.3 0.1111111111111111</logoSize>
			<size>1 1</size>
			<pos>0 -0.1</pos>
			<maxLogoCount>5</maxLogoCount>
		</carousel>
		<text name="systemInfo">
			<backgroundColor>00000000</backgroundColor>
			<fontSize>0.0444444444444444</fontSize>
			<size>0.2875 0.0305555555555556</size>
			<pos>0.5 0.6</pos>
			<color>ffffffaa</color>
			<origin>0.5 0.5</origin>
			<alignment>center</alignment>
			<zIndex>100</zIndex>
		</text>
	</view>
	<view name="basic, detailed, video">
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<color>ffffff</color>
		</image>
		<textlist name="gamelist">
			<pos>0.2776 0.5380</pos>
			<size>0.5625 0.6654</size>
			<origin>0.5 0.5</origin>
			<selectorColor>ffffff</selectorColor>
			<selectorImagePath>./art/selector.png</selectorImagePath>
			<selectorHeight>0.0784</selectorHeight>
			<selectorOffsetY>-0.0130</selectorOffsetY>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff66</primaryColor>
			<secondaryColor>ffff00</secondaryColor>
			<fontPath>./art/Typo_HongikinganB.ttf</fontPath>
			<fontSize>0.036</fontSize>
			<forceUppercase>0</forceUppercase>
			<horizontalMargin>0.05</horizontalMargin>
			<lineSpacing>2.1000</lineSpacing>
		</textlist>
		<image name="logo">
			<maxSize>0.3980 0.1320</maxSize>
			<pos>0.2916 0.0833</pos>
			<origin>0.5 0.5</origin>
		</image>
		<text name="logoText">
			<size>0.5208 0.1629</size>
			<pos>0.2916 0.0833</pos>
			<origin>0.5 0.5</origin>
		</text>
		<rating name="md_rating">
			<pos>2 2</pos>
		</rating>
		<datetime name="md_releasedate, md_lastplayed">
			<pos>2 2</pos>
		</datetime>
		<image name="md_marquee">
			<maxSize>0.1 0.1</maxSize>
			<pos>2 2</pos>
		</image>
	</view>

	<variables>
		<subset.fontset>테마 폰트 설정</subset.fontset>
	</variables>
	<subset name="fontset">
		<include name="타이포 백범일지 B">./settings/Typo_BaekbeomB.xml</include>
		<include name="타이포 스톰 B">./settings/Typo_StormB.xml</include>
		<include name="타이포 쌍문동 B">./settings/Typo_SsangmunDongB.xml</include>
		<include name="타이포 홍익인간 B">./settings/Typo_HongikinganB.xml</include>
		<include name="DX 국민시대">./settings/DXNPeriod.xml</include>
		<include name="DX 대장간 볼드">./settings/DXblacksmithB.xml</include>
		<include name="DX 동화나라 볼드">./settings/DXDnaraB.xml</include>
		<include name="DX 마카롱 레귤러">./settings/DXMacaron.xml</include>
		<include name="DX 방탄 고딕 레귤러">./settings/DXBangtango.xml</include>
		<include name="더 스피드">./settings/The_Speed.xml</include>
	</subset>
</theme>
